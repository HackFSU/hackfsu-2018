extends ../../../../_pug/standardLayout.pug

block vars
    -
        var pageName = "Confirm Password Reset"
        var viewDir = "/static/views/user/password/complete_reset"

block append scripts
    script(src=`${viewDir}/script.js`)

block content
    h1 Confirm Password Reset
    form#completeReset
        .form-section
            fieldset.row
                .field-label.col-md-3 New Password *
                .col-md-9: input.responsive(type="password" id="password" name="password" minlength=8 maxlength=1000 placeholder="********************" required)
            fieldset.row
                .field-label.col-md-3 Confirm Password *
                .col-md-9: input.responsive(type="password" name="password2" minlength=8 maxlength=1000 placeholder="********************" required data-parsley-equalto="#password")
        .form-section
            .text-right
                button.btn.btn-form(type="submit") Submit

