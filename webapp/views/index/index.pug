extends ../layout


block content
  include ../partials/mlh-badge.pug

  section.header

    .confetti-wrapper.container
      .conf-cont
        .confetti

    .content.container
      .heading
        p HACKFSU
          strong  5
      .subheading
        p DARE TO BE
          strong  BOLD

      .preview-form
        .column.is-8-widescreen.content-wrap.row
          .date March 2nd - 4th

          .form.col.s12
            .selection
              .label I want to be a &hellip;
              .buttons
                span: a(name="hacker") Hacker
                span: a(name="volunteer") Volunteer
                span: a(name="sponsor") Sponsor

            input#email.input-field(type="email", placeholder="My Email Is ...")
            .submit.row
              button#submit-button.col.s2.offset-s5
                img(src=`${locals.img}/celebration.png`)
